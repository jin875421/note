        <activity
            android:name=".activity.PostSearchActivity"
            android:exported="false" />
        <activity
            android:name=".activity.PostDisplayActivity"
            android:exported="false" />
        <activity
            android:name=".activity.RespondDetail"
            android:exported="false" />
        <activity
            android:name=".activity.UserInfoActivity"
            android:exported="false" />
        <activity
            android:name=".activity.FollowsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.FansActivity"
            android:exported="false" />
        <activity
            android:name=".activity.UpdatePersonalInformationActivity"
            android:exported="false" />
    </application>
</manifest>
